# Stripe API Keys
# Get these from https://dashboard.stripe.com/apikeys
# NOTE: Secret key is now handled by the payment server
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Payment Server Configuration
# The separate payment server handles all Stripe transactions
PAYMENT_SERVER_URL=http://localhost:3005
API_SECRET_KEY=your_payment_server_api_key_here

# Your app URL for Stripe redirects
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Configuration
# Option 1: Professional SMTP (Recommended for production)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Option 2: Gmail
# GMAIL_USER=your_email@gmail.com
# GMAIL_APP_PASSWORD=your_gmail_app_password_here

# General email settings
EMAIL_FROM=noreply@ausbeds.com.au
EMAIL_FROM_NAME=ausbeds

# Database Configuration
# Get this from your database provider (e.g., Vercel/Neon)
DATABASE_URL=your_database_url_here

# Zapier Integration
# Get this from your Zapier webhook trigger
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_id_here

# ActiveCampaign Direct Integration
# Toggle between Zapier and direct ActiveCampaign integration
NEXT_PUBLIC_USE_DIRECT_ACTIVECAMPAIGN=false

# ActiveCampaign API Configuration
# Get these from ActiveCampaign Settings > Developer
ACTIVECAMPAIGN_API_URL=https://yourcompany.api-us1.com
ACTIVECAMPAIGN_API_KEY=your_api_key_here
ACTIVECAMPAIGN_LIST_ID=6

# Google Sheets Integration
# Sheet ID from the URL: https://docs.google.com/spreadsheets/d/[SHEET_ID]/edit
GOOGLE_SHEETS_ID=your_google_sheet_id_here
# Path to your Google service account credentials JSON file
GOOGLE_SHEETS_CREDENTIALS_PATH=google-sheets-credentials.json
